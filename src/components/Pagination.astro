---
const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;
import { Button } from '@nextui-org/react';

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---
<div class="flex justify-between mt-10">
    <Button className={
        disablePrevious ? "inline-block px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : "hover:bg-zinc-600 hover:text-white rounded-lg"
      }><a href={'/media?page=' + (currentPage - 1)}>
        Previous
      </a></Button>
      <Button className={
        disableNext ? "inline-block px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : " hover:bg-zinc-600 hover:text-white rounded-lg"
      }>
        <a href={'/media?page=' + (currentPage + 1)}>
            Next
        </a>
      </Button>
</div>